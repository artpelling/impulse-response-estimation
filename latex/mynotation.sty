\ProvidesPackage{mynotation}

\newcommand{\newnotation}[2]{\NewDocumentCommand{#1}{}{\ensuremath{#2}}}
\newcommand{\renewnotation}[2]{\RenewDocumentCommand{#1}{}{\ensuremath{#2}}}


% GENERAL
% ====================================================================================================
\renewnotation{\i}{\imath}
\renewnotation{\d}{\mathrm{d}}

% LINEAR ALGEBRA
% ====================================================================================================
\newnotation{\Mat}{X} % arbitrary matrix
\newnotation{\Svs}{\Sigma} % Matrix of singular values
\newnotation{\Lam}{\Lambda} % Matrix of eigenvalues

% SYSTEM THEORY
% ====================================================================================================
\newnotation{\Sys}{\mathbf{G}} % LTI-system
\renewnotation{\H}{\mathcal{H}} % Hankel matrix
\renewnotation{\L}{\mathbb{L}} % Loewner matrix
\newnotation{\sL}{\mathbb{L}_s} % shifted Loewner matrix
\newnotation{\cG}{P} % controllability Gramian
\newnotation{\cGSF}{Z_P} % controllability Gramian square-root factor
\newnotation{\oG}{Q} % observability Gramian
\newnotation{\cMat}{\mathcal{C}} % observability matrix
\newnotation{\oGSF}{Z_Q} % observability Gramian square-root factor
\newnotation{\oMat}{\mathcal{O}} % observability matrix
